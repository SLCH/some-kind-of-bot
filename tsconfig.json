{
    "compilerOptions": {
      "baseUrl": ".",
      "moduleResolution": "node",
      "lib": ["esnext"],
      "target": "esnext",
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "alwaysStrict": true,
      //    "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node", "mocha"]
    },
    "include": ["lib/**/*.ts"],
    // "exclude": ["node_modules"]
}